---
import classNames from "classnames";

import ResumeSection from "src/components/ResumeSection/ResumeSection.astro";
import {
  main_header,
  brief,
  certs,
  languages,
  libraries,
  tools,
  platforms,
  skills,
  education,
  curriculum_vitae,
} from "src/resume_content.js";

import responsive_styles from "./ResponsiveResume.module.scss";
import common_styles from "./resume-common.module.scss";
---

<div
  class:list={classNames(
    common_styles.resume,
    responsive_styles["responsive-resume"]
  )}
>
  <ResumeSection
    className={classNames(responsive_styles["primary-section"])}
    headerLevel={1}
    section={main_header}
  />
  <ResumeSection enterFrom="left" section={brief} />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="right"
    section={certs}
  />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="left"
    section={languages}
  />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="right"
    section={libraries}
  />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="left"
    section={tools}
  />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="right"
    section={platforms}
  />
  <ResumeSection
    className={classNames(common_styles["horizontal-list"])}
    enterFrom="left"
    section={skills}
  />
  <ResumeSection enterFrom="right" section={education} />
  <ResumeSection enterFrom="left" section={curriculum_vitae} />
</div>
